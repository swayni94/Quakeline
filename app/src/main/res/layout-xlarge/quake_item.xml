<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    cardview:cardUseCompatPadding="true"
    android:layout_marginEnd="25dp">

    <LinearLayout

        android:id="@+id/quakeItem_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="18dp"
        android:background="@drawable/eliptical_lineerlayout"
        android:backgroundTint="@color/backgroundColor_lowPriority">


        <TextView
            android:id="@+id/quakeItem_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dsamdlm GYUGUVG IIBHBHBUHKLB"
            android:textStyle="bold|italic|normal"
            android:textColor="@color/textColor"
            android:textSize="25sp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:padding="18dp"
            >
            <TextView
                 android:id="@+id/quakeItem_Date"
                 android:textSize="25sp"
                 android:text="12.32.1221"
                android:textStyle="bold|italic|normal"
                android:textColor="@color/textColor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="230dp"
                 />


            <TextView
                android:id="@+id/quakeItem_currentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 km"
                android:textSize="25sp"
                android:textStyle="bold|italic|normal"
                android:textColor="@color/textColor"
                android:layout_marginEnd="250dp"
                />

            <TextView
                android:id="@+id/quakeItem_Mag"
                android:text="3.4"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textStyle="bold|italic|normal"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>